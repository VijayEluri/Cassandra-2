#!/bin/sh

set -e

case "$1" in
     configure)
        chown -R cassandra:cassandra /var/cassandra /var/log/cassandra
        ;;
    abort-upgrade|abort-remove|abort-deconfigure)
        ;;
        *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0
